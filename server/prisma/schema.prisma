generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model SupportAgent {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  active         Boolean
  dateCreated    DateTime @db.Date
  description    String?
  email          String
  lastActivityOn DateTime @db.Date
  name           String
  phone          String
}

model SupportTicket {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  assignedTo  String   @db.ObjectId
  dateCreated DateTime @db.Date
  description String
  severity    String
  status      String
  topic       String
  type        String
}
